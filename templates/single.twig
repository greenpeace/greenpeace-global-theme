{% extends "base.twig" %}

{% block content %}
	<style>

		/* Temporary added here. Will be moved to main stylesheet */

		.article {
			background: none;
		}

		.post_body {
			background-image: url({{ background_image }});
		}

	</style>
	<div class="container">
		<div class="post-block" id="post-{{ post.ID }}">

			<div class="row">
				<div class="col-lg-5">
					<!-- Page Header Block starts -->
					<div class="page-header">
						<div class="top-tags-wrap">
							<span class="category-topic-title">{{ __('post', 'planet4-master-theme') }}</span>
							<span class="category-topic-title-seprater"></span>
							{% for tag in post.tags %}
								<span class="post-tags"><a href="{{ tag.link }}">#{{ tag.title }}</a></span>
							{% endfor %}
						</div>
						<h1>{{ post.title|raw }}</h1>
						<!-- More markup to follow for header block -->
					</div>
					<!-- Page Header block ends -->
				</div>
			</div>

			<div class="row">
				<div class="col-lg-5">
					<div class="post-block-author-info">
						<p>
							<span class="author-title">{{ __( 'by', domain ) }}
								{% if ( author_override ) %}
									{{ author_override }}
								{% else %}
									<a href="{{ post.author.path }}">{{ post.author.name }} </a>
								{% endif %}
							</span>
							<span>/ {{ post.post_date|date }} </span>
						</p>
						{% if ( post.first_paragraph and post.take_action_page) %}
							<p class="white-text">
								{{ post.first_paragraph|raw }}
							</p>
							{% if ( post.second_paragraph ) %}
								<p>
									{{ post.second_paragraph|raw }}
								</p>
							{% endif %}
						{% endif %}
					</div>
				</div>
				{% if ( post.first_paragraph and post.take_action_page) %}
					<div class="col-lg-5 offset-lg-2">
						{% if ( post.take_action_boxout ) %}
							{{ post.take_action_boxout|shortcodes|raw }}
						{% endif %}
					</div>
				{% endif %}
			</div>

			<div class="row">
				<div class="col-lg-12">
					<div class="post-details">
						{{ post.content|e('wp_kses_post')|raw }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Post Page Block End -->


	{% if ( author_override == '' and post.author.description ) %}
		{% include "blocks/author_profile.twig" with {post:post} %}
	{% endif %}

	<div>
		{% if ( post.articles ) %}
			{{ post.articles|shortcodes|raw }}
		{% endif %}
	</div>
	{% if ( 'closed' != post.comment_status ) %}
		{% include "comments_section.twig" with {comments:post.get_comments()} %}
	{% endif %}
{% endblock %}
